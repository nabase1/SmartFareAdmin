<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtserviceNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Service Type :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/el_messiri_bold"
                app:layout_constraintBottom_toBottomOf="@+id/ttxtServiceName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ttxtServiceName"
                app:layout_constraintVertical_bias="0.285" />


            <TextView
                android:id="@+id/ttxtServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lux_montag"
                android:text="Tanoso"
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toEndOf="@+id/txtserviceNameTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Name :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/el_messiri_bold"
                app:layout_constraintBottom_toBottomOf="@+id/dTextNum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dTextNum" />


            <TextView
                android:id="@+id/dTextNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lux_montag"
                android:text="Nabase"
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.441"
                app:layout_constraintStart_toEndOf="@+id/txtNameTitle"
                app:layout_constraintTop_toBottomOf="@+id/ttxtServiceName" />

            <TextView
                android:id="@+id/txtPickupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pick Up Date :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/el_messiri_bold"
                app:layout_constraintBottom_toBottomOf="@+id/cPickupDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cPickupDate" />

            <TextView
                android:id="@+id/cPickupDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lux_montag"
                android:text="16/12/2019"
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.307"
                app:layout_constraintStart_toEndOf="@+id/txtPickupTitle"
                app:layout_constraintTop_toBottomOf="@+id/dTextNum" />

            <TextView
                android:id="@+id/txtPickTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Pick Up Time :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/el_messiri_bold"
                app:layout_constraintBottom_toBottomOf="@+id/cPickUpTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cPickUpTime" />

            <TextView
                android:id="@+id/cPickUpTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lux_montag"
                android:text="1:30"
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toEndOf="@+id/txtPickTime"
                app:layout_constraintTop_toBottomOf="@+id/cPickupDate" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>