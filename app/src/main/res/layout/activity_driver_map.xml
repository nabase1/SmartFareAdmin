<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapsActivity"
    android:id="@+id/nav_drawer" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dFromConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="@color/colorDark"
                android:layout_marginStart="8dp"
                map:layout_constraintBottom_toBottomOf="@id/mtoolbar"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="@id/mtoolbar" />

           <androidx.appcompat.widget.Toolbar
               android:id="@+id/mtoolbar"
               android:layout_width="315dp"
               android:layout_height="wrap_content"
               app:popupTheme="@style/AppTheme.PopupOverlay"
               app:theme="@style/Theme.AppCompat.Light.DarkActionBar"
               map:layout_constraintBottom_toBottomOf="parent"
               map:layout_constraintEnd_toEndOf="parent"
               map:layout_constraintHorizontal_bias="0.13"
               map:layout_constraintStart_toEndOf="@+id/textView5"
               map:layout_constraintTop_toTopOf="parent"
               map:layout_constraintVertical_bias="0.0">
               <fragment
                   android:id="@+id/dFrom_autocomplete_fragment"
                   android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   map:layout_constraintVertical_bias="0.523" />

           </androidx.appcompat.widget.Toolbar>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dToConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorWhite"
            android:elevation="10dp"
            map:layout_constraintEnd_toEndOf="@id/dFromConstraintLayout"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="@id/dFromConstraintLayout"
            map:layout_constraintTop_toBottomOf="@id/dFromConstraintLayout"
            map:layout_constraintBottom_toTopOf="@+id/meterConstraintLayout"
            map:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="@color/colorDark"
                android:layout_marginStart="8dp"
                map:layout_constraintBottom_toBottomOf="@+id/dto_autocomplete_fragment"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="@+id/dto_autocomplete_fragment" />


            <fragment
                android:id="@+id/dto_autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintHorizontal_bias="0.0"
                map:layout_constraintStart_toEndOf="@+id/textView6"
                map:layout_constraintTop_toTopOf="parent"
                map:layout_constraintVertical_bias="0.523" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".fragments.DriverMap" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/meterConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorDark"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone">

            <Switch
                android:id="@+id/fareMeterSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch meter"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                map:layout_constraintBottom_toBottomOf="@id/meterPriceTxt"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="@id/meterPriceTxt"
                map:layout_constraintVertical_bias="0.092" />

            <TextView
                android:id="@+id/meterPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textSize="40sp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/roundbtn"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintTop_toTopOf="parent"
               />

            <Button
                android:id="@+id/dEndtripbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="End Trip"
                android:textColor="@color/colorWhite"
                android:background="@drawable/roundbtn"
                map:layout_constraintEnd_toEndOf="@id/fareMeterSwitch"
                map:layout_constraintStart_toStartOf="@id/fareMeterSwitch"
                map:layout_constraintTop_toBottomOf="@+id/fareMeterSwitch"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttonDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="36dp"
                android:background="@drawable/roundbtn"
                android:text="Get Destination Route"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="8dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="@id/meterPriceTxt"
                map:layout_constraintStart_toStartOf="@id/meterPriceTxt"
                map:layout_constraintTop_toBottomOf="@id/meterPriceTxt"
                map:layout_constraintVertical_bias="0.976" />





        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buttonPickUpRout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/roundbtn"
            android:text="Get Pick Up Route"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toStartOf="@+id/buttonDestination"
            map:layout_constraintHorizontal_bias="0.115"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.978" />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bookingLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorDark"
        android:elevation="0dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">


        <TextView
            android:id="@+id/dtextFromTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/fromtxt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/el_messiri_bold"
            map:layout_constraintBottom_toBottomOf="@+id/dtextFrom"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="@+id/dtextDestTitle"
            map:layout_constraintTop_toTopOf="@+id/dtextFrom"
            map:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dtextDestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/Destinationtxt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toBottomOf="@+id/textDest"
            map:layout_constraintStart_toStartOf="@+id/dtextpriceTitle"
            map:layout_constraintTop_toTopOf="@+id/dtextDest"
            map:layout_constraintVertical_bias="0.125" />

        <TextView
            android:id="@+id/dtextFrom"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="ghana west africa and agracn repulbliaffk"
            android:textSize="16sp"
            android:fontFamily="@font/lux_montag"
            android:textColor="@color/colorWhite"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/textFromTitle"
            map:layout_constraintTop_toBottomOf="@+id/hideLayoutbtn" />


        <TextView
            android:id="@+id/dtextDest"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="ghana west africa and agracn repulbliaffk"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/lux_montag"
            map:layout_constraintBottom_toTopOf="@+id/dtextprice"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/dtextDestTitle"
            map:layout_constraintTop_toBottomOf="@+id/dtextFrom" />

        <TextView
            android:id="@+id/dtextpriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/pricetxt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toBottomOf="@+id/dtextprice"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/dtextprice"
            map:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/dtextprice"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:text="200 gh"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/lux_montag"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toTopOf="@+id/dateTxt"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/dtextpriceTitle" />

        <Button
            android:id="@+id/hideLayoutbtn"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/hideme"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/yellow_ginger"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="126dp"
            android:layout_height="69dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="Start Trip"
            android:background="@drawable/roundbtn"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbtn"
            android:ems="10"
            android:inputType="none"
            android:text=""
            android:hint="@string/choose_datetxt"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textIsSelectable="true"
            map:layout_constraintBottom_toTopOf="@+id/timeTxt"
            map:layout_constraintEnd_toStartOf="@+id/btnBook"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/btnBook" />

        <EditText
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbtn"
            android:ems="10"
            android:inputType="none"
            android:text=""
            android:hint="Time ?"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textIsSelectable="true"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="@+id/dateTxt"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="@+id/dateTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

