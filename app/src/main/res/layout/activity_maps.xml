<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapFragment"
    tools:context=".fragments.MapsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fromConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite"
        android:elevation="10dp"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textColor="@color/colorDark"
            android:layout_marginStart="8dp"
            map:layout_constraintBottom_toBottomOf="@id/mtoolbar"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@id/mtoolbar" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mtoolbar"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.13"
            map:layout_constraintStart_toEndOf="@+id/textView5"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.0">

            <fragment
                android:id="@+id/fromautocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                map:layout_constraintVertical_bias="0.523" />


        </androidx.appcompat.widget.Toolbar>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorWhite"
        android:elevation="10dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@id/fromConstraintLayout"
        map:layout_constraintBottom_toTopOf="@+id/meterConstraintLayout"
        map:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textColor="@color/colorDark"
            android:layout_marginStart="8dp"
            map:layout_constraintBottom_toBottomOf="@+id/autocomplete_fragment"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/autocomplete_fragment" />


        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toEndOf="@+id/textView6"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintVertical_bias="0.523" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meterConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorDark"
        android:elevation="0dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textFromTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/fromtxt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/el_messiri_bold"
            map:layout_constraintBottom_toBottomOf="@+id/ttxtFrom"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="@+id/textDestTitle"
            map:layout_constraintTop_toTopOf="@+id/ttxtFrom"
            map:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textDestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/Destinationtxt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toBottomOf="@+id/textDest"
            map:layout_constraintStart_toStartOf="@+id/textpriceTitle"
            map:layout_constraintTop_toTopOf="@+id/textDest"
            map:layout_constraintVertical_bias="0.125" />

        <TextView
            android:id="@+id/ttxtFrom"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="ghana west africa and agracn repulbliaffk"
            android:textSize="16sp"
            android:fontFamily="@font/lux_montag"
            android:textColor="@color/colorWhite"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/textFromTitle"
            map:layout_constraintTop_toBottomOf="@+id/hideLayoutbtn" />


        <TextView
            android:id="@+id/textDest"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="ghana west africa and agracn repulbliaffk"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="16sp"
            android:fontFamily="@font/lux_montag"
            map:layout_constraintBottom_toTopOf="@+id/textprice"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/textDestTitle"
            map:layout_constraintTop_toBottomOf="@+id/ttxtFrom" />

        <TextView
            android:id="@+id/textpriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/pricetxt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toBottomOf="@+id/textprice"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/textprice"
            map:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textprice"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:text="200 gh"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/lux_montag"
            android:textColor="@color/colorWhite"
            map:layout_constraintBottom_toTopOf="@+id/dateTxt"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/textpriceTitle" />

        <Button
            android:id="@+id/hideLayoutbtn"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/hideme"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/yellow_ginger"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBook"
            android:layout_width="126dp"
            android:layout_height="69dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="@string/book_a_cab_now"
            android:background="@drawable/roundbtn"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"
            android:fontFamily="@font/el_messiri_bold"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/roundbtn"
            android:ems="10"
            android:inputType="none"
            android:text=""
            android:hint="@string/choose_datetxt"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textIsSelectable="true"
            map:layout_constraintBottom_toTopOf="@+id/timeTxt"
            map:layout_constraintEnd_toStartOf="@+id/btnBook"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="@+id/btnBook" />

        <EditText
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbtn"
            android:ems="10"
            android:inputType="none"
            android:text=""
            android:hint="Time ?"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textIsSelectable="true"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="@+id/dateTxt"
            map:layout_constraintHorizontal_bias="0.0"
            map:layout_constraintStart_toStartOf="@+id/dateTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
