<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/texttitleHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/el_messiri_bold"
        android:text="Trip Details"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texttitleHead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texttitleHead">

                <TextView
                    android:id="@+id/txtNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Name :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/dTextNum"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dTextNum" />

                <TextView
                    android:id="@+id/dTextNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="Nabase"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.463"
                    app:layout_constraintStart_toEndOf="@+id/txtNameTitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtPhonetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Contact :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/dContact"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dContact" />

                <TextView
                    android:id="@+id/dContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="0553181665"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlue"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.474"
                    app:layout_constraintStart_toEndOf="@+id/txtPhonetitle"
                    app:layout_constraintTop_toBottomOf="@+id/dTextNum" />

                <TextView
                    android:id="@+id/txtFromTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="From :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ttxtFrom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ttxtFrom"
                    app:layout_constraintVertical_bias="0.285" />

                <TextView
                    android:id="@+id/ttxtFrom"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="Tanoso"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.479"
                    app:layout_constraintStart_toEndOf="@+id/txtFromTitle"
                    app:layout_constraintTop_toBottomOf="@+id/dContact" />

                <TextView
                    android:id="@+id/txtToTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="To :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ttxtTo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ttxtTo" />

                <TextView
                    android:id="@+id/ttxtTo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="Sofoline"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.671"
                    app:layout_constraintStart_toEndOf="@+id/txtToTitle"
                    app:layout_constraintTop_toBottomOf="@+id/ttxtFrom" />

                <TextView
                    android:id="@+id/txtPickupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Pick Up Date :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/cPickupDate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cPickupDate" />

                <TextView
                    android:id="@+id/cPickupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="16/12/2019"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.365"
                    app:layout_constraintStart_toEndOf="@+id/txtPickupTitle"
                    app:layout_constraintTop_toBottomOf="@+id/ttxtTo" />

                <TextView
                    android:id="@+id/txtPickTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Pick Up Time :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/cPickUpTime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cPickUpTime" />

                <TextView
                    android:id="@+id/cPickUpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="1:30"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.381"
                    app:layout_constraintStart_toEndOf="@+id/txtPickTime"
                    app:layout_constraintTop_toBottomOf="@+id/cPickupDate" />

                <TextView
                    android:id="@+id/txtDistanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Distance (KM) :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/cDistance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cDistance"
                    app:layout_constraintVertical_bias="0.35" />

                <TextView
                    android:id="@+id/cDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="23 KM"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.465"
                    app:layout_constraintStart_toEndOf="@+id/txtDistanceTitle"
                    app:layout_constraintTop_toBottomOf="@+id/cPickUpTime" />

                <TextView
                    android:id="@+id/txtAmountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:text="Amount :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ctextAmount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ctextAmount" />

                <TextView
                    android:id="@+id/ctextAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:text="34 GHC"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.509"
                    app:layout_constraintStart_toEndOf="@+id/txtAmountTitle"
                    app:layout_constraintTop_toBottomOf="@+id/cDistance"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/txtOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHER CHARGES"
                    android:textSize="20sp"
                    android:textColor="@color/colorDark"
                    android:layout_marginStart="16sp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtAmountTitle"/>


                <TextView
                    android:id="@+id/cTextWaitingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting Fare:"
                    android:textSize="20sp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ctextWaiting"
                    app:layout_constraintTop_toTopOf="@id/ctextWaiting"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/ctextWaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:fontFamily="@font/livingston_sanserif"
                    android:textAlignment="center"
                    android:layout_marginTop="16sp"
                    app:layout_constraintTop_toBottomOf="@id/txtOthers"
                    app:layout_constraintStart_toEndOf="@id/cTextWaitingTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/txtTotalFareTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fare:"
                    android:textSize="20sp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:layout_marginStart="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txtTotalFare"
                    app:layout_constraintBottom_toBottomOf="@id/txtTotalFare"/>

                <TextView
                    android:id="@+id/txtTotalFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/livingston_sanserif"
                    app:layout_constraintTop_toBottomOf="@id/ctextWaiting"
                    app:layout_constraintStart_toEndOf="@id/txtTotalFareTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Cash Received"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtTotalFare"/>

                <TextView
                    android:id="@+id/txtChangeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change :"
                    android:textSize="20sp"
                    android:fontFamily="@font/el_messiri_bold"
                    android:layout_marginStart="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editTextAmount"/>

                <TextView
                    android:id="@+id/txtChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/livingston_sanserif"
                    app:layout_constraintTop_toBottomOf="@+id/editTextAmount"
                    app:layout_constraintStart_toEndOf="@id/txtChangeTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/cbtnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundbtn"
                    android:text="Trip Done"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtChange"
                    app:layout_constraintVertical_bias="0.017" />

                <Button
                    android:id="@+id/buttonViewRout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundbtn"
                    android:text="View Rout On Map"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/cbtnDone"
                    app:layout_constraintEnd_toStartOf="@+id/cbtnDone"
                    app:layout_constraintHorizontal_bias="0.073"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cbtnDone"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>